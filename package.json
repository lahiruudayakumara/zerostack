{
  "name": "zerostack",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",

    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "docs:start": "pnpm --filter docs start",

    "cli:build": "pnpm --filter myframework-cli build",
    "cli:test": "pnpm --filter myframework-cli test",
    "core:build": "pnpm --filter myframework-core build",
    "core:test": "pnpm --filter myframework-core test"
  },
  "devDependencies": {
    "typescript": "^5.1.6",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "pnpm": "^8.6.1",
    "jest": "^29.6.1",
    "@types/jest": "^29.5.3"
  },
  "engines": {
    "node": ">=18"
  }
}
